<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stripe Payment</title>
  <link rel="stylesheet" href="/css/stripe.css">
</head>
<body>
  <div class="container">
    <h1>Stripe Payment</h1>

    <div class="order-summary">
      <h2>Order Summary</h2>
      <p>Original Total: <strong>$<%= (totalAmount + discountAmount).toFixed(2) %></strong></p>
      <p>Discount Applied: <strong>-$<%= discountAmount.toFixed(2) %></strong></p>
      <p>Final Total: <strong>$<%= totalAmount.toFixed(2) %></strong></p>
    </div>

    <form action="/stripe/charge" method="POST">
      <input type="hidden" name="amount" value="<%= totalAmount.toFixed(2) %>">
    
    
      <button type="submit" class="btn">Pay $<%= totalAmount.toFixed(2) %></button>
    </form>

    <a href="/cart" class="btn">Go Back to Cart</a>
  </div>

  <script src="https://js.stripe.com/v3/"></script>
  <script>
    // Initialize Stripe Elements for card details (placeholder for actual integration)
    const stripe = Stripe('your-publishable-key-here');
    const elements = stripe.elements();
    const card = elements.create('card');
    card.mount('#card-element');
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - View Users</title>
    <link rel="stylesheet" href="/css/userdetails.css"> <!-- Link to the CSS file -->
</head>
<body>
    <div class="container">
        <h1>View Users</h1>

        <!-- Search Bar -->
        <div class="search-container">
            <input type="text" id="search-bar" placeholder="Search users..." onkeyup="filterTable()">
        </div>

        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="user-table-body">
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.fullName %></td>
                        <td><%= user.email %></td>
                        <td><%= user.mobile %></td>
                        <td class="<%= user.isBlocked ? 'status-blocked' : 'status-active' %>">
                            <%= user.isBlocked ? 'Blocked' : 'Active' %>
                        </td>
                        <td>
                            <% if (user.isBlocked) { %>
                                <form action="/admin/users/unblock/<%= user._id %>" method="POST">
                                    <button type="submit" class="unblock">Unblock</button>
                                </form>
                            <% } else { %>
                                <form action="/admin/users/block/<%= user._id %>" method="POST">
                                    <button type="submit" class="block">Block</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- JavaScript for Search -->
    <script>
        function filterTable() {
            const searchQuery = document.getElementById("search-bar").value.toLowerCase();
            const rows = document.querySelectorAll("#user-table-body tr");

            rows.forEach(row => {
                const cells = row.querySelectorAll("td");
                const nameCell = cells[0].textContent.toLowerCase();
                const emailCell = cells[1].textContent.toLowerCase();
                const mobileCell = cells[2].textContent.toLowerCase();
                
                if (nameCell.includes(searchQuery) || emailCell.includes(searchQuery) || mobileCell.includes(searchQuery)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
</body>
</html>
